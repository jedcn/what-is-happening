<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>User Activity</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.2/css/bulma.min.css">
</head>
<body>
<section class="section">
  <div class="container">
    <h1 class="title">
      {{title}}
    </h1>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Activity</th>
          <th>Repository</th>
          <th>Links</th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <th>Date</th>
          <th>Activity</th>
          <th>Repository</th>
          <th>Links</th>
        </tr>
      </tfoot>
      <tbody>
        {{#userEvents}}
        <tr>
          <th>{{created_at}}</th>
          <td>{{{text}}}</td>
          <td>{{repo}}</td>
          <td>
            {{{links}}}
          </td>
        </tr>
        {{/userEvents}}
      </tbody>
    </table>
  </div>
</section>
</body>
</html>
